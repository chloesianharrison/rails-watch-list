<div class="d-flex flex-column">

<%# navbar %>

  <nav class="d-flex navbar-lewagon p-3 bg-light" >
    <i class="fa-solid fa-film "></i>

    <div class="me-3">
      <a href="#" class="button">My lists</a>
      <%= link_to "New list", new_list_path, class: "button" %>
    </div>
  </nav>

<%# banner %>

  <div class="banner">
    <%= image_tag "YOUR MOVIES STORED YOUR WAY.jpg" %>
  </div>

<%# lists container %>
  <div class="banbox d-flex align-items-end flex-column justify-content-end col-md-11 offset-md-2 banbox "  >
    <div class="mt-3 mb-3 container w-75 list-card">
      <div class="d-flex justify-content-between list-card">
       <h2 class="m-4 "> MY LISTS</h2>

        <%= link_to "Add new list", new_list_path, class: "btn button new" %>
      </div>

      <div class="d-flex m-2 justify-content-around flex-wrap mb-5 list-card">
        <% @lists.each do |list| %>
        <div class="card  m-3 card-title p-5 list" style="max-width: 20rem;">
          <p><%= link_to list.name, list_path(list) %></p>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
