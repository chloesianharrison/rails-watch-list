<div class="d-flex flex-column">

<%# navbar %>

  <nav class="d-flex navbar-lewagon p-3 bg-light" >
    <i class="fa-solid fa-film "></i>

    <div class="me-3">
      <a href="#" class="button">My lists</a>
      <%= link_to "New list", new_list_path, class: "button" %>
    </div>
  </nav>

<%# banner %>

  <div class="banner">
    <%= image_tag "YOUR MOVIES STORED YOUR WAY.jpg" %>
  </div>

<%# lists container %>
  <div class="leftbox d-flex flex-column">
    <div class="mt-3 mb-3 container">
      <div class="d-flex justify-content-between">
       <h2 class="m-4 "> MY LISTS</h2>

        <%= link_to "Add new list", new_list_path, class: "button me-2" %>
      </div>

      <div class="d-flex justify-content-around flex-wrap mb-5">
        <% @lists.each do |list| %>
        <div class="card m-3 p-4 list" >
          <p><%= link_to list.name, list_path(list) %></p>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
