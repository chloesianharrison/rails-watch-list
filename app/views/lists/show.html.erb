<div class="container">
<h2><%= @list.name %></h2>

<div class="list-card pcard">
</div>

<div class="list-card lcard">
</div>

<div class="d-flex">

<% @list.bookmarks.each do |bookmark| %>
<div class="card w-50 m-3">
<%= image_tag bookmark.movie.poster_url, class: "card-img-top" %>
<div class="card-body d-flex align-items-center">
<div>
<h5 class="card-title"><%= bookmark.movie.title %> • <%= bookmark.movie.rating %> ⭐️</h5>
    <p class="card-text"><%= bookmark.movie.overview %></p>
    <ul class="list-group list-group-flush">
    <li class="list-group-item"><em><strong>"<%= bookmark.comment %>"</strong></em></li>
    <div class="mt-3">
  <%= link_to "Delete", bookmark_path(bookmark), class: "delete-button button", data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
  </div>
</ul>
</div>
</div>
</div>
<% end %>

</div>






