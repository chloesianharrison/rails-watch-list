  <nav class="d-flex navbar-lewagon p-3 bg-light" >
    <i class="fa-solid fa-film "></i>

    <div class="me-3">
      <%= link_to "My lists", lists_path, class: "button" %>
      <%= link_to "New movie", new_list_bookmark_path(@list), class: "button" %>
      <%= link_to "New list", new_list_path, class: "button" %>
